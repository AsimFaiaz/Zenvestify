@page "/"
@using Zenvestify.Shared.Layout
@layout NotLoggedInLayout
@inject NavigationManager Nav

<section class="landing-hero text-center py-5">
    <div class="container">
        <span class="badge rounded-pill bg-gradient-primary px-3 py-2 mb-3">New • Zenvestify</span>
        <h1 id="greet" class="display-4 fw-bold mb-2">Welcome 👋</h1>
        <p class="lead text-light-emphasis mb-4">
            Your one-stop solution to track income, bills, savings, and tax-deductible expenses.
        </p>
        <button class="btn btn-lg btn-brand" data-bs-toggle="modal" data-bs-target="#loginPrompt">
            Log in to start
        </button>
    </div>
</section>


<div class="modal fade" id="loginPrompt" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background:#151a2b; color:#e8eaf1;">
            <div class="modal-header border-0">
                <h5 class="modal-title">Sign in to Zenvestify</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">Continue to your dashboard and finish setup.</p>
                <button class="btn btn-brand w-100 mb-2" @onclick='() => Nav.NavigateTo("/login")'>Log in</button>
                <button class="btn btn-outline-light w-100" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script>
    (function(){
      const h=new Date().getHours();
      const name="User";
      const g = h<12?"Good morning":(h<18?"Good afternoon":"Good evening");
      const el=document.getElementById("greet");
      if(el) el.textContent = `${g}, ${name} 👋`;
    })();
</script>
